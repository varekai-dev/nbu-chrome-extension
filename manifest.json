{
  "manifest_version": 3,
  "name": "NBU Coins - Add All to Cart",
  "description": "Автоматично додає всі товари з каталогу NBU в кошик одним кліком",
  "version": "1.0.5",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://coins.bank.gov.ua/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://coins.bank.gov.ua/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
